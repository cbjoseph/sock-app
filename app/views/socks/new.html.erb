<h1>Have a sock you want to add?</h1>
<a href="/socks">Back to all socks</a>
<h2>Describe it below in the form and we will try to find one for you!</h2>

<%= form_tag '/socks', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, '', class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, '', class: 'form-control' %>
  </div>
   <div>
    <%= label_tag :size %>
    <%= text_field_tag :size, '', class: 'form-control' %>
  </div>

     <div>
    <%= label_tag :description%>
    <%= text_field_tag :description, '', class: 'form-control' %>
  </div>
     <div>
    <%= label_tag :image_url %>
    <%= text_field_tag :image, '', class: 'form-control' %>
  </div>
  <div>
  <%= submit_tag 'Submit sock' %>
  </div>
  <% end %>
